<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_limpar"
            style="@style/BtnOperacoes"
            android:text="C"/>
        <TextView
            android:id="@+id/btn_dividir"
            style="@style/BtnOperacoes"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_7"
            style="@style/BtnNumeros"
            android:text="7"/>

        <TextView
            android:id="@+id/btn_8"
            style="@style/BtnNumeros"
            android:text="8"/>

        <TextView
            android:id="@+id/btn_9"
            style="@style/BtnNumeros"
            android:text="9"/>

        <TextView
            android:id="@+id/btn_multiplicar"
            style="@style/BtnOperacoes"
            android:text="X"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_4"
            style="@style/BtnNumeros"
            android:text="4"/>

        <TextView
            android:id="@+id/btn_5"
            style="@style/BtnNumeros"
            android:text="5"/>

        <TextView
            android:id="@+id/btn_6"
            style="@style/BtnNumeros"
            android:text="6"/>

        <TextView
            android:id="@+id/btn_subtrair"
            style="@style/BtnOperacoes"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_1"
            style="@style/BtnNumeros"
            android:text="1"/>

        <TextView
            android:id="@+id/btn_2"
            style="@style/BtnNumeros"
            android:text="2"/>

        <TextView
            android:id="@+id/btn_3"
            style="@style/BtnNumeros"
            android:text="3"/>

        <TextView
            android:id="@+id/btn_somar"
            style="@style/BtnOperacoes"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_ponto"
            style="@style/BtnNumeros"
            android:text="."/>

        <TextView
            android:id="@+id/btn_0"
            style="@style/BtnNumeros"
            android:text="0"/>

        <ImageView
            android:id="@+id/btn_backspace"
            style="@style/BtnNumeros"
            android:src="@drawable/backspace"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/btn_igual"
            style="@style/BtnOperacoes"
            android:text="="/>

    </LinearLayout>

</LinearLayout>